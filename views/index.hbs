<a href="/new">Create URL</a>

<table>
  <thead>
    <tr>
      <th>Short</th>
      <th>Long</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  {{#each urls}}
  <tr>
    <td><a href="{{this.short}}">{{ this.short }}</a></td>
    <td><a href="{{this.long}}">{{ this.long }}</a></td>
    <td><a href="/urls/{{this._id}}/edit">Edit</a></td>
    <td><a href="/urls/{{this._id}}?_method=DELETE">Delete</a></td>
  </tr>
  {{/each}}
</table>
